#include <stdio.h>
#include <string.h>

// Function to perform pattern matching
void naivePatternSearch(char *text, char *pattern) {
    int n = strlen(text);
    int m = strlen(pattern);

    // Traverse the text to find the pattern
    for (int i = 0; i <= n - m; i++) {
        int j;
        // Check for the match
        for (j = 0; j < m; j++) {
            if (text[i + j] != pattern[j])
                break;
        }

        // If full pattern is found
        if (j == m) {
            printf("Pattern found at index %d\n", i);
        }
    }
}

int main() {
    char text[100], pattern[100];

    printf("Enter text: ");
    gets(text);  // Read input text

    printf("Enter pattern: ");
    gets(pattern);  // Read pattern

    naivePatternSearch(text, pattern);

    return 0;
}

